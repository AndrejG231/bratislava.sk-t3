{
  "kind": "collectionType",
  "collectionName": "blog_posts",
  "info": {
    "name": "Blog Post",
    "description": ""
  },
  "options": {
    "increments": true,
    "timestamps": true,
    "draftAndPublish": true
  },
  "pluginOptions": {
    "i18n": {
      "localized": true
    }
  },
  "attributes": {
    "title": {
      "type": "text",
      "required": false,
      "unique": true,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "excerpt": {
      "type": "text",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "coverImage": {
      "model": "file",
      "via": "related",
      "allowedTypes": ["images"],
      "plugin": "upload",
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "slug": {
      "type": "uid",
      "targetField": "title",
      "required": false
    },
    "sections": {
      "type": "dynamiczone",
      "components": [
        "sections.columned-text",
        "sections.text-with-image",
        "sections.file-list",
        "sections.narrow-text",
        "sections.divider",
        "sections.waves",
        "sections.links",
        "sections.contact",
        "sections.accordion",
        "sections.calculator",
        "sections.list-items",
        "sections.videos",
        "sections.icon-title-desc",
        "sections.numerical-list",
        "sections.articles-list"
      ],
      "required": false,
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "author": {
      "model": "user",
      "via": "posts",
      "plugin": "users-permissions"
    },
    "tag": {
      "model": "tag"
    },
    "moreLink": {
      "type": "component",
      "repeatable": false,
      "component": "blocks.blog-post-link",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    },
    "date_added": {
      "type": "datetime",
      "pluginOptions": {
        "i18n": {
          "localized": true
        }
      }
    }
  }
}
